<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/ibtn_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/direction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ibtn_right"/>

    <ImageButton
        android:id="@+id/ibtn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="90"
        android:src="@mipmap/direction"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ibtn_up"/>

    <ImageButton
        android:id="@+id/ibtn_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="180"
        android:src="@mipmap/direction"
        app:layout_constraintStart_toEndOf="@id/ibtn_left"
        app:layout_constraintTop_toBottomOf="@id/ibtn_right"/>

    <ImageButton
        android:id="@+id/ibtn_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="270"
        android:src="@mipmap/direction"
        app:layout_constraintEnd_toStartOf="@id/ibtn_up"
        app:layout_constraintTop_toBottomOf="@id/ibtn_up"/>


</androidx.constraintlayout.widget.ConstraintLayout>