<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".HomeActivity">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

                <Button android:id="@+id/map_list" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="mapList"></Button>
                <Button android:id="@+id/mapping_list" android:layout_marginTop="30dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="mappingList"></Button>
                <Button android:id="@+id/start_mapping" android:layout_marginTop="30dp"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="startMapping"></Button>
                <Button android:id="@+id/stop_mapping" android:layout_marginTop="30dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="stopMapping"></Button>
                 </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>